{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./.next",
    "rootDir": "./src",
    "baseUrl": ".",
    "allowJs": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@cropschool/shared": ["../shared/src"],
      "@cropschool/ui": ["../ui/src"],
      "@cropschool/game-engine": ["../game-engine/src"]
    },
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../game-engine"
    }
  ]
}
